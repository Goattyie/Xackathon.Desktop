<Page x:Class="Xackathon.WPF.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Xackathon.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Style="{StaticResource TextBoxWithWatermark}" Tag="Логин" VerticalAlignment="Center" Margin="150,0" Height="35"/>
        <TextBox VerticalAlignment="Center" Margin="150,0" Grid.Row="1"  Height="35" Style="{StaticResource TextBoxWithWatermark}" Tag="Пароль"/>
        <Button Style="{StaticResource InformButton}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2">Вход</Button>
    </Grid>
</Page>
